{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.core",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2017.object",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@store/*": ["store/*"],
      "@store": ["store/index.ts"],
      "@component/*": ["component/*"],
      "@shared/*": ["shared/*"],
      "@provider/*": ["provider/*"],
      "@provider": ["provider/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*.ts",
    "src/libs/**"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
